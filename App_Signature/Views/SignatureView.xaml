<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             xmlns:ext="clr-namespace:App_Signature.Extensions"
             xmlns:vm="clr-namespace:App_Signature.ViewModels"
             xmlns:model="clr-namespace:App_Signature.Models"
             x:Class="App_Signature.Views.SignatureView" x:DataType="vm:SignatureViewModel"
             Loaded="ContentPage_Loaded" Title="{Binding Title}"
             BackgroundColor="{StaticResource Secondary}">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <mct:DrawingView Grid.Row="0" BackgroundColor="LightGray" WidthRequest="500" HeightRequest="200"
                         IsMultiLineModeEnabled="True" LineWidth="4" Lines="{Binding Lines, Mode=TwoWay}">
        </mct:DrawingView>
        <Button Grid.Row="2" Text="Clear" Command="{Binding ClearSignatureCommand}"/>
        <Button Grid.Row="3" Text="Get" Command="{Binding SaveSignatureCommand}"/>
    </VerticalStackLayout>
</ContentPage>